{
  "name": "@commontools/common-ui",
  "author": "The Common Authors",
  "version": "0.0.1",
  "description": "High-level UI components",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "wireit",
    "clean": "wireit",
    "test": "web-test-runner \"test/**/*.test.js\" --node-resolve",
    "watch": "web-test-runner test/**/*.test.js --node-resolve --watch",
    "dev": "vite"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commontoolsinc/labs.git"
  },
  "bugs": {
    "url": "https://github.com/commontoolsinc/labs/issues"
  },
  "homepage": "https://github.com/commontoolsinc/labs#readme",
  "exports": "./lib/index.js",
  "files": [
    "./lib/index.js"
  ],
  "dependencies": {
    "@shoelace-style/shoelace": "^2.15.1",
    "@types/node": "^20.14.2",
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "@web/test-runner": "^0.18.2",
    "mocha": "^10.4.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "wireit": "^0.14.4"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "../common-frp:build"
      ],
      "files": [
        "./src/**/*"
      ],
      "output": [
        "./lib/**/*"
      ],
      "command": "tsc --build -f"
    },
    "clean": {
      "command": "rm -rf ./lib ./.wireit"
    }
  }
}
