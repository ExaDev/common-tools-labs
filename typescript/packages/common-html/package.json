{
  "name": "@commontools/common-html",
  "author": "The Common Authors",
  "version": "0.0.1",
  "description": "Safe reactive html components via tagged template literal",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "npm run build && mocha lib/test/**/*.test.js",
    "test-browser": "npm run build && web-test-runner \"lib/test-browser/**/*.test.js\" --node-resolve",
    "build": "wireit",
    "clean": "wireit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commontoolsinc/labs.git"
  },
  "bugs": {
    "url": "https://github.com/commontoolsinc/labs/issues"
  },
  "homepage": "https://github.com/commontoolsinc/labs#readme",
  "exports": {
    ".": {
      "default": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./html": {
      "default": "./lib/html.js",
      "types": "./lib/html.d.ts"
    },
    "./render": {
      "default": "./lib/render.js",
      "types": "./lib/render.d.ts"
    },
    "./events": {
      "default": "./lib/events.js",
      "types": "./lib/events.d.ts"
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.10",
    "@web/test-runner": "^0.18.2",
    "mocha": "^10.6.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "wireit": "^0.14.4"
  },
  "wireit": {
    "build": {
      "dependencies": [],
      "files": [
        "./src/**/*"
      ],
      "output": [
        "./lib/**/*"
      ],
      "command": "tsc --build -f"
    },
    "clean": {
      "command": "rm -rf ./lib ./.wireit"
    }
  }
}
